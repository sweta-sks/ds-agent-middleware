{
  "compilerOptions": {
    "target": "ES2020", /* Modern JavaScript with native ESM support */
    "module": "NodeNext", /* Enable Node.js-style ESM */
    "moduleResolution": "NodeNext", /* Match module resolution to Node.js ESM */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}